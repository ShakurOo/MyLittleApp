{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": ["flowtype", "react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "plugin:flowtype/recommended",
    "standard",
    "standard-jsx"
  ],
  "rules": {
    "react/jsx-no-undef": [2, { "allowGlobals": true }]
  },
  "globals": {
    "window": false,
    "__CONFIG__": true,
    "__ENV__": true
  }
}
